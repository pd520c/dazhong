import datetime
from sqlalchemy import *
from sqlalchemy import distinct, func
from sqlalchemy.sql import *
from sqlalchemy.orm import *
from sqlalchemy.databases import mysql
mysql_engine = create_engine('mysql+pymysql://root:@localhost:3306/dazhong?charset=utf8',
                             encoding = "utf-8",echo =True)
metadata = MetaData()
Session=sessionmaker()
Session.configure(bind=mysql_engine)
session=Session()

shopindex_table = Table('shopindex', metadata,
                        Column('id', Integer, primary_key=True),
                        Column('shopurl',String(200)),
                        mysql_engine = 'InnoDB')

shopinfo_table = Table('shopinfo',metadata,
                       Clolumn('id',Integer ,primary_key=True),
                       Clolumn('name',String(50)),
                       Clolumn('address',String(50)),
                       Clolumn('price',Integer),
                       Clolumn('comment',Integer),
                       mysql_engine = 'InnoDB')

def install(): 
    metadata.create_all(mysql_engine)

install()

